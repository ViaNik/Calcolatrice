            <Button mnemonicParsing="false" onAction="#onclick" prefHeight="10000.0" prefWidth="10000.0" text="+" GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <Button mnemonicParsing="false" onAction="#cancUno" prefHeight="10000.0" prefWidth="10000.0" text="&lt;=" GridPane.columnIndex="3" />
            <Button mnemonicParsing="false" onAction="#clear" prefHeight="10000.0" prefWidth="10000.0" text="CE" GridPane.columnIndex="2" />
            <Button mnemonicParsing="false" onAction="#onclick" prefHeight="10000.0" prefWidth="10000.0" text=")" GridPane.columnIndex="1" />
            <Button mnemonicParsing="false" onAction="#onclick" prefHeight="10000.0" prefWidth="10000.0" text="(" />
         </children>
      </GridPane>
   </children>
</VBox>
